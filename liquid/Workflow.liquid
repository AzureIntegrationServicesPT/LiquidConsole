{% capturejson work %}
{
    "inputs": {
        "host": {
            "workflow": {
                {%assign id = content.inputs.host.workflow.id | remove: "${"| split: "_" %}
                {%capture final%}{{id[0]}}_{{id[1]}}{%endcapture%}
                "id": {{final | downcase | json}}
            }
        },
        "body": {{content.inputs.body | json}},
        "headers": {{content.inputs.headers | json}}
    },
    "runAfter": {{content.runAfter | json}},
    "type": "Workflow"
}
{%endcapturejson %}
