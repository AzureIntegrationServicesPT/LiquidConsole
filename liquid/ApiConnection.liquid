{% capturejson func %}
{
    "inputs": {
        "body": {{content.inputs.body | json}},
        "queries":{{content.inputs.queries | json}},
        "path":{{content.inputs.path | json}},
        "host": {
            {%assign getConnectionName = content.inputs.host.connection.referenceName | split : "'" %}
            "connectionName": {{getConnectionName[1] | json }}
        },
        "headers": {{content.inputs.headers | json}},
        "method": {{content.inputs.method | json}}
    },
    "runAfter": {{content.runAfter | json}},
    "runtimeConfiguration": {{content.runtimeConfiguration | json}}
    "type": "ApiConnection"
}
{%endcapturejson %}
{{func | clear_nulls | json}}
{%comment%}Do ApiConnection to ServiceProvider if needed{%endcomment%}